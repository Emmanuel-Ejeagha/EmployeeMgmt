@inherits LayoutComponentBase

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            @Body
        </div>
    </div>
</div>


<style>
    body {
        position: relative;
        overflow: hidden;
        background: url('images/background/bg0.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        height: 100vh;
        margin: 0;
        z-index: 0;
    }

    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('images/background/bg0.jpg') no-repeat center center;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        filter: blur(10px);
        z-index: -1;
    }

    .container-fluid {
        position: relative;
        z-index: 1;
        color: white;
        padding: 20px;
    }
</style>